<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkBlue</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="AppTheme.NoActionBarFit">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:textAppearance">@style/PrimaryButtonTextStyle</item>
        <item name="android:background">@drawable/bg_pink_btn_corner_round_3dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PinkButtonStyle">
        <item name="android:textAppearance">@style/WhiteNormalTextStyle.Size15</item>
        <item name="android:background">@drawable/bg_pink_button</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">190dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!--    custom dialog style-->
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/colorTransparent</item>
        <item name="android:bottomDark">@color/colorTransparent</item>
        <item name="android:bottomMedium">@color/colorTransparent</item>
        <item name="android:centerBright">@color/colorTransparent</item>
        <item name="android:centerDark">@color/colorTransparent</item>
        <item name="android:centerMedium">@color/colorTransparent</item>
        <item name="android:fullBright">@color/colorTransparent</item>
        <item name="android:fullDark">@color/colorTransparent</item>
        <item name="android:topBright">@color/colorTransparent</item>
        <item name="android:topDark">@color/colorTransparent</item>
    </style>

    <!--    Progress Bar Style-->
    <style name="ProgressbarStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBarTextStyle">
        <item name="android:textColor">@color/colorHalvetica</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="progressBarStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@color/colorTransparent</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="PrimaryButtonTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="WhiteBoldTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhiteNormalTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BlackNormalTextStyle">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BlackBoldTextStyle">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlackHintTextStyle">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="BlackOpacityNormalTextStyle">
        <item name="android:textColor">@color/colorTextBlackOp50</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DarkPinkNormalTextStyle">
        <item name="android:textColor">@color/colorDarkPink</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WhiteBoldTextStyle.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WhiteNormalTextStyle.Size15">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BlackNormalTextStyle.Size19">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="BlackNormalTextStyle.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BlackBoldTextStyle.Size50">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="BlackOpacityNormalTextStyle.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BlackOpacityNormalTextStyle.Size15">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BlackHintTextStyle.Size15">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DarkPinkNormalTextStyle.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DarkGrayNormalTextStyle">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DarkGrayNormalTextStyle.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DarkGrayBoldTextStyle">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DarkGrayBoldTextStyle.Size17">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BlueBoldTextStyle">
        <item name="android:textColor">@color/colorDarkBlue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlueBoldTextStyle.Size17">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BlueBoldTextStyle.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BlueNormalTextStyle">
        <item name="android:textColor">@color/colorDarkBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BlueNormalTextStyle.Size12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BlueNormalTextStyle.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryEditTextStyle">
        <item name="android:textAppearance">@style/DarkGrayNormalTextStyle.Size14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:background">@drawable/bg_edit_text_boarder_corner_round_3dp</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorTextBlackOp50</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>


    <!-- Normal Edit texts with hint style-->
    <style name="editTextWithHintStyle">
        <item name="android:textColor">@color/colorHalvetica</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">14dp</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorLightMediumGray</item>
    </style>


    <!--    Default edit text style -->
    <style name="editTextWithHintStyle.size15">
        <item name="android:textSize">15sp</item>
    </style>


    <!--    Default edit text style with square corner -->
    <style name="editTextWithHintSquareCornerStyle" parent="editTextWithHintStyle">
        <item name="android:background">@drawable/bg_square_border_et</item>
    </style>


    <!--    Default edit text style with rounded corner -->
    <style name="editTextWithHintRoundCornerStyle" parent="editTextWithHintStyle">
        <item name="android:background">@drawable/bg_rounded_border_btn</item>
    </style>

    <!--    Default edit text style with rounded corner size 15 -->
    <style name="editTextWithHintRoundCornerStyle.size15">
        <item name="android:textSize">15sp</item>
    </style>


    <!--    Default edit text style with square corner with size 15 -->
    <style name="editTextWithHintSquareCornerStyle.size15">
        <item name="android:textSize">15sp</item>
    </style>


    <!--    Edit text title label style-->
    <style name="editTextTitleLabelStyle">
        <item name="android:textColor">@color/colorHalvetica</item>
    </style>

    <!--    Default edit text title style -->
    <style name="editTextTitleLabelStyle.size16">
        <item name="android:textSize">16sp</item>
    </style>


    <!--Button Text Styles-->
    <!--    Basic Button Style-->
    <style name="basicButtonStyle">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <!--    Rounded Button Styles-->
    <!--    Rounded Solid Background of Basic Button Style-->
    <style name="roundedSolidColorButtonStyle" parent="basicButtonStyle">
        <item name="android:background">@drawable/bg_solid_rounded_btn</item>
    </style>


    <!--    Rounded  Background Border of Basic Button Style-->
    <style name="roundedBorderButtonStyle" parent="basicButtonStyle">
        <item name="android:background">@drawable/bg_rounded_border_btn</item>
    </style>


    <!--    Extensions Of Round Button Styles-->
    <!--    Rounded Solid Background of Basic Button Style with Text Color Black And Size 20-->
    <style name="roundedSolidColorButtonStyle.size20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <!--    Rounded Border Background of Basic Button Style with Text Color Black And Size 20-->
    <style name="roundedBorderButtonStyle.size20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <!--    Text view styles when its a button-->
    <style name="textViewButtonStyle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="textViewButtonStyle.size20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textViewButtonStyle.size16">
        <item name="android:textSize">16sp</item>
    </style>


    <!--    Toolbar title Style-->
    <style name="toolbarTitleStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


</resources>
