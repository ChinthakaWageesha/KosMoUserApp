<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPink</item>
        <item name="colorPrimaryDark">@color/colorDarkPink</item>
        <item name="colorAccent">@color/colorPink</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SplashTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SelectLanguageButtonStyle">
        <item name="android:background">@drawable/bg_select_language_toggle</item>
        <item name="android:textColor">@drawable/bg_select_language_text</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="PurpleButtonStyle">
        <item name="android:textAppearance">@style/PrimaryButtonTextStyle</item>
        <item name="android:background">@drawable/bg_purple_btn_corner_round_3dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PinkButtonStyle">
        <item name="android:textAppearance">@style/PrimaryButtonTextStyle</item>
        <item name="android:background">@drawable/bg_pink_btn_corner_round_3dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="GrayButtonStyle">
        <item name="android:textAppearance">@style/WhiteNormalTextStyle.Size12</item>
        <item name="android:background">@drawable/bg_btn_select_language</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!--    custom dialog style-->
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/colorTransparent</item>
        <item name="android:bottomDark">@color/colorTransparent</item>
        <item name="android:bottomMedium">@color/colorTransparent</item>
        <item name="android:centerBright">@color/colorTransparent</item>
        <item name="android:centerDark">@color/colorTransparent</item>
        <item name="android:centerMedium">@color/colorTransparent</item>
        <item name="android:fullBright">@color/colorTransparent</item>
        <item name="android:fullDark">@color/colorTransparent</item>
        <item name="android:topBright">@color/colorTransparent</item>
        <item name="android:topDark">@color/colorTransparent</item>
    </style>

    <!--    Progress Bar Style-->
    <style name="ProgressbarStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBarTextStyle">
        <item name="android:textColor">@color/colorHalvetica</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="progressBarStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@color/colorTransparent</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="PrimaryButtonTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">17sp</item>
    </style>

