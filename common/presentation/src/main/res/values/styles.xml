        <item name="android:minHeight">48dp</item>
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:background">@drawable/bg_edit_text_boarder_corner_round_3dp</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorLightGray</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <!--    Edit text title label style-->
    <style name="editTextTitleLabelStyle">
        <item name="android:textColor">@color/colorHalvetica</item>
    </style>

    <!--    Default edit text title style -->
