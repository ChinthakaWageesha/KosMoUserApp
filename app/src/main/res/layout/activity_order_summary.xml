<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".presentation.order.userOrders.OrderSummary">

    <ScrollView
        android:id="@+id/sv_order_summary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:background="@color/colorLightGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_order_summary_detail_base"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_order_summary_talent_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_sample" />

                    <TextView
                        android:id="@+id/tv_order_summary_talent_name"
                        style="@style/AnyColorNormalStyle.Size14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:maxLines="1"
                        android:textColor="#414D55"
                        app:layout_constraintBottom_toTopOf="@+id/tv_order_summary_talent_field"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_order_summary_talent_image"
                        app:layout_constraintTop_toTopOf="@+id/iv_order_summary_talent_image"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_order_summary_talent_field"
                        style="@style/AnyColorNormalStyle.Size12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_regular"
                        android:maxLines="1"
                        android:textColor="#414D55"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_order_summary_talent_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_order_summary_talent_image"
                        app:layout_constraintTop_toBottomOf="@+id/tv_order_summary_talent_name" />

                    <TextView
                        android:id="@+id/tv_order_summary_reference"
                        style="@style/TextGrayNormalStyle.Size10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:maxLines="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_order_summary_talent_image" />

                    <TextView
                        android:id="@+id/tv_order_summary_due_date"
                        style="@style/AnyColorNormalStyle.Size10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:maxLines="1"
                        android:textColor="#F52789"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_order_summary_reference" />

                    <TextView
                        android:id="@+id/tv_order_summary_for"
                        style="@style/TextGrayNormalStyle.Size18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="@string/message_its_for"
                        app:layout_constraintEnd_toStartOf="@+id/tv_order_summary_for_username"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_order_summary_due_date" />

                    <TextView
                        android:id="@+id/tv_order_summary_for_username"
                        style="@style/AnyColorNormalStyle.Size18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:maxLines="1"
                        android:textColor="#F52789"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_order_summary_for"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_order_summary_for"
                        app:layout_constraintTop_toTopOf="@+id/tv_order_summary_for" />

                    <TextView
                        android:id="@+id/tv_address_as"
                        style="@style/TextGrayNormalStyle.Size14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:maxLines="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_order_summary_for" />

                    <TextView
                        android:id="@+id/tv_address_order_summary_user_as"
                        style="@style/AnyColorNormalStyle.Size14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:maxLines="1"
                        android:textColor="#F52789"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_address_as"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_address_as"
                        app:layout_constraintTop_toTopOf="@+id/tv_address_as" />

                    <TextView
                        android:id="@+id/tv_order_summary_message"
                        style="@style/TextGrayNormalStyle.Size18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:maxLines="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_address_as" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_order_summary_stage_base"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:id="@+id/cv_reviewing_order"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="8dp"
                        android:alpha="0.3"
                        android:background="@drawable/bg_gray_oval"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_reviewing_order"
                        style="@style/AnyColorNormalStyle.Size10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:alpha="0.3"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="@string/title_reviewing_stage"
                        android:textColor="#414D55"
                        app:layout_constraintBottom_toBottomOf="@+id/cv_reviewing_order"
                        app:layout_constraintStart_toEndOf="@+id/cv_reviewing_order"
                        app:layout_constraintTop_toTopOf="@+id/cv_reviewing_order" />

                    <View
                        android:id="@+id/cv_processing_order"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:alpha="0.3"
                        android:background="@drawable/bg_gray_oval"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cv_reviewing_order" />

                    <TextView
                        android:id="@+id/tv_processing_order"
                        style="@style/AnyColorNormalStyle.Size10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:alpha="0.3"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="@string/title_processing_stage"
                        android:textColor="#414D55"
                        app:layout_constraintBottom_toBottomOf="@+id/cv_processing_order"
                        app:layout_constraintStart_toEndOf="@+id/cv_processing_order"
                        app:layout_constraintTop_toTopOf="@+id/cv_processing_order" />

                    <View
                        android:id="@+id/cv_on_hold_order"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_gray_oval"
                        android:alpha="0.3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cv_processing_order" />

                    <TextView
                        android:id="@+id/tv_on_hold_order"
                        style="@style/AnyColorNormalStyle.Size10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="@string/title_on_hold_stage"
                        android:textColor="#414D55"
                        android:alpha="0.3"
                        app:layout_constraintBottom_toBottomOf="@+id/cv_on_hold_order"
                        app:layout_constraintStart_toEndOf="@+id/cv_on_hold_order"
                        app:layout_constraintTop_toTopOf="@+id/cv_on_hold_order" />

                    <View
                        android:id="@+id/cv_approved_order"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:alpha="0.3"
                        android:background="@drawable/bg_gray_oval"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cv_on_hold_order" />

                    <TextView
                        android:id="@+id/tv_approved_order"
                        style="@style/AnyColorNormalStyle.Size10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="@string/title_approved_stage"
                        android:alpha="0.3"
                        android:textColor="#414D55"
                        app:layout_constraintBottom_toBottomOf="@+id/cv_approved_order"
                        app:layout_constraintStart_toEndOf="@+id/cv_approved_order"
                        app:layout_constraintTop_toTopOf="@+id/cv_approved_order" />

                    <View
                        android:id="@+id/cv_expired_order"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:alpha="0.3"
                        android:background="@drawable/bg_gray_oval"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cv_approved_order" />

                    <TextView
                        android:id="@+id/tv_expired_order"
                        style="@style/AnyColorNormalStyle.Size10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="@string/title_expired_stage"
                        android:alpha="0.3"
                        android:textColor="#414D55"
                        app:layout_constraintBottom_toBottomOf="@+id/cv_expired_order"
                        app:layout_constraintStart_toEndOf="@+id/cv_expired_order"
                        app:layout_constraintTop_toTopOf="@+id/cv_expired_order" />

                    <View
                        android:id="@+id/cv_refund_order"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:alpha="0.3"
                        android:background="@drawable/bg_gray_oval"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cv_expired_order"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/tv_refund_order"
                        style="@style/AnyColorNormalStyle.Size10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:alpha="0.3"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="@string/title_refund_stage"
                        android:textColor="#414D55"
                        app:layout_constraintBottom_toBottomOf="@+id/cv_refund_order"
                        app:layout_constraintStart_toEndOf="@+id/cv_refund_order"
                        app:layout_constraintTop_toTopOf="@+id/cv_refund_order" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:background="@color/colorLightGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <TextView
                android:id="@+id/tv_title_instructions"
                style="@style/BlackNormalStyle.Size12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="36dp"
                android:fontFamily="@font/sf_pro_display_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TextView
                android:id="@+id/tv_order_summary_instructions"
                style="@style/BlackNormalStyle.Size12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/sf_pro_display_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_instructions"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_no_talent_order"
        style="@style/NoDataTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:maxLines="2"
        android:text="@string/message_no_related_talent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />


</androidx.constraintlayout.widget.ConstraintLayout>