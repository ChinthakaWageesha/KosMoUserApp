<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_recent_search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_talent_recent_search"
        style="@style/AnyColorNormalStyle.Size13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/sf_pro_display_medium"
        android:maxLines="1"
        android:textColor="#414D55"
        app:layout_constraintBottom_toTopOf="@+id/tv_talent_field_recent_search"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/iv_recent_search"
        app:layout_constraintTop_toTopOf="@+id/iv_recent_search"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_talent_field_recent_search"
        style="@style/AnyColorNormalStyle.Size12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/sf_pro_display_medium"
        android:maxLines="1"
        android:textColor="#414D55"
        app:layout_constraintBottom_toBottomOf="@+id/iv_recent_search"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/iv_recent_search"
        app:layout_constraintTop_toBottomOf="@+id/tv_talent_recent_search" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_gray" />
</androidx.constraintlayout.widget.ConstraintLayout>